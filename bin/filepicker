#!/bin/bash

## @file
# Works kind of like rifle. Checks for the file extension and chooses
# a designated app to execute it with.
#
# $1 - filename of a file to be opened.
#
# @author Anh Dinh Trong <ad438310@students.mimuw.edu.pl>
# @date 2022
#

FILENAME="$1"
case "$FILENAME" in
  *mp3 | *flac | *wav)
    mpv "$FILENAME"
    ;;
  *mkv | *mp4 | *ts)
    mpv "$FILENAME" &
    ;;
  *png | *jpg | *jpeg | *pnm)
    sxiv "$FILENAME" &
    ;;
  *tex | *c | *h | *java)
    vim "$FILENAME"
    ;;
  *pdf)
    zathura --fork "$FILENAME"
    ;; # Feel free to add your functionality.
esac
